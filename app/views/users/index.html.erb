<main class="Site-content">
  <div class="container">
    <div class="venue-container">
      <div class="venue-box black-box">
        <h2>Judges for the 2016 Festival</h2>
      </div>
    </div>

    <div class="venue-container">
        <% @judges.each do | judge | %>
          <div class="venue-box">
            <h3><%= judge.username %></h3>
            <p><span class="splash-color">Biography:</span> <%= judge.username %> <%= User::BIOGRAPHY.sample %></p>
          </div>
        <% end %>
    </div>
  </div>
</main>
