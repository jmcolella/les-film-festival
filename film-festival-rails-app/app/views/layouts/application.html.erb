<!DOCTYPE html>
<html>
<head>
  <title>Lower East Side Film Festival</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= link_to "LES Film Festival", root_path %>
<%= link_to "Categories", categories_path %>
<%= link_to "Reviews", reviews_path %>
<%= link_to "Judges", judges_path %>
<% if logged_in? %>
  <%= link_to "Logout", logout_path %>
  <%= link_to current_user.username, user_path(current_user) %>
<% else %>
  <%= link_to "Register", new_user_path %>
  <%= link_to "Login", login_path %>
<% end %>
<%= yield %>
</body>
<footer>
<%= link_to "Judges Registration", judges_register_path %>
<%= link_to "Judges Login", judges_login_path %>
</footer>
</html>
