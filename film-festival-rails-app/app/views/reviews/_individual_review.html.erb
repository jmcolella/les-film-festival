<p><%= review.format_time %></p>
<h4><%= link_to review.movie.title, movie_path(review.movie)%></h4>
<p><%= render partial: "shared/#{number_to_word(review.movie.average_rating.round)}_star" %></p>

<% if review.user.role == "judge" %>
  <p><%= review.user.role%> <%= link_to review.user.username, judges_path%> says: <%= review.description %></p>
<% else %>
  <p><%= review.user.role%> <%= link_to review.user.username, user_path(review.user)%> says: <%= review.description %></p>
<% end %>
