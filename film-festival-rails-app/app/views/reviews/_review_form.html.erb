<%= form_for :review, html: { id: "review_form"} do |f| %>

  <%= render partial: "error_messages", locals: {object: @review} %>

  <%= f.label :description %>:
  <%= f.text_field :description %><br>

  <%= f.label :stars %>:
  <%= f.number_field(:stars, in: 1.0..5.0, step: 0.5) %><br>

  <%= f.submit %>
<% end %>