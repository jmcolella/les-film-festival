<h1>Recent Reviews</h1>

<div id="reviews_all_list">
<ul>
  <% @reviews.reverse[0..10].each do |review| %>
  <%= review.updated_at %><br>
  <%= review.description %><br>
  <li>Movie: <%= review.movie.title%></li>
  <li>Stars: <%= review.stars%></li>
  <li><%= review.user.username %></li>
  <br>
  <% end %>
</ul>
</div>


<h1>Most Recent Reviews by Category</h1>
<% @categories.each do |category| %>
<div id="reviews_category_list">
  <h2><%= category.title%></h2>
<ul>
  <% category.five_most_recent_reviews.each do |review| %>
  <%= review.updated_at %><br>
  <%= review.description %><br>
  <li>Movie: <%= review.movie.title%></li>
  <li>Stars: <%= review.stars%></li>
  <li><%= review.user.username %></li>
  <br>
  <% end %>
</ul>
</div>
<% end %>