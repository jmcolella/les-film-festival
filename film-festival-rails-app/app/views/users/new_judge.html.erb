<main class="Site-content">
<div class="container">

<h1>Judge Registration</h1>

  <%= render partial: 'shared/error_messages', locals: { object: @user } %>

<div class="username-box">
  <%= form_for :user do |f| %>

      <div class="row-xs-3 form_group">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
    </div><br>

    <div class="row-xs-3 form_group">
      <%= f.label :email %><br>
      <%= f.text_field :email, class: 'form-control' %>
    </div><br>

    <div class="row-xs-3 form_group">
      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control'  %>
    </div><br>

    <div class="row-xs-3 form_group">
      <%= f.label :token %><br>
      <%= f.password_field :token, class: 'form-control' %>
    </div>
    <br>

      <%= f.submit "Create account", class: "btn btn-default"%>

  <% end %>
</div>
</div>
</main>
